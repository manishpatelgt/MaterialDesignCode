<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="GButton3">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LongButton3" parent="GButton3">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:textSize">28sp</item>
    </style>


    <style name="LongButton4" parent="GButton3">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="LargestButton" parent="EButton">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:textSize">32sp</item>
    </style>


    <style name="LargeButton2" parent="EButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:textSize">25sp</item>
    </style>


    <style name="EButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="GTicketButton2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">@dimen/ui_element_spacing</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MainMenuButton2" parent="GTicketButton2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/shape_rec</item>
    </style>

    <style name="ButtonText2">
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

</resources>